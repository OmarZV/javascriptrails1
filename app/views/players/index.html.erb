<h1>Players</h1>

<div style="height: 100px; width: 100px; background-color: <%= ['blue', 'red', green', black', 'yellow', 'orange'].sample %>;">
</div>

<% @players.each do |player| %>
	<h3><%= player.name %></h3>
	<p><%= player.bio %></p>
	<p>Linked to steriods? <span id="<%=player.id %>"><%= player.linked_to_steriods %></span></p>
	
	<%= form_for player do |f| %>
	<%= f.check_box :linked_to_steriods %>
	<%= f.submit "change status" %>
	<% end %>
	
	<% end %>